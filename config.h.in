/**
 * \file     config.h.in
 * \brief    definition of the building options
 */

#ifndef __CONFIG_CALYP_H__
#define __CONFIG_CALYP_H__

/* Version definition */
#define CALYP_VERSION_MAJOR @CALYP_VERSION_MAJOR @
#define CALYP_VERSION_MINOR @CALYP_VERSION_MINOR @
#define CALYP_VERSION_PATCH @CALYP_VERSION_PATCH @
#define CALYP_VERSION @CALYP_VERSION @
#define CALYP_VERSION_STRING "@CALYP_VERSION_STRING@"

#define UPDATE_CHANNEL "@UPDATE_CHANNEL@"

/* CPU features */
#cmakedefine USE_SSE

/* QtDBus */
#cmakedefine USE_QTDBUS

/* Dynamic Modules Loading */
#cmakedefine USE_DYNLOAD

/* Use modules in a different thread */
#cmakedefine CALYP_THREADED_MODULES

/* OpenCV */
#cmakedefine USE_OPENCV

/* FFMPEG */
#cmakedefine USE_FFMPEG

/* Fervor update lib */
#cmakedefine USE_FERVOR

/* Use a resource manager to manage streams in different threads */
#cmakedefine USE_RESOURCES

#endif  // __CONFIG_CALYP_H__
